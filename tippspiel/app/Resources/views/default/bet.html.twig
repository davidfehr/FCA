    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box">
            <form role="form" action="bet" method="post" class="f1"> 
                <input type="hidden" name="gameInitalIndex" id="inputQuestionInitalIndex" value="{{ games[0].id|e }}">
                <input type="hidden" name="gameCount" id="inputQuestionCount" value="{{ games|length }}"> 

                <fieldset>
                    <h4>Wie schlägt sich der Weltmeister</h4>
                    {% for game in natiGames %}
                        <div class="row">
                                <div class="col-xs-12 col-md-4">
                                    <p>{{ game.hometeam.name|e }}<p>
                                </div>
                                <div class="col-xs-12 col-md-1">
                                    <input type="text" name="betHometeamScore{{ game.id|e }}" class="form-control custom" maxlength="2" id="exampleInputGame{{ game.id|e }}" placeholder="Tore">
                                </div>
                                <div class="col-xs-12 col-md-1 text-center"> : </div>
                                <div class="col-xs-12 col-md-1">
                                    <input type="text" name="betGuestteamScore{{ game.id|e }}" class="form-control" maxlength="2" id="exampleInputGame{{ game.id|e }}" placeholder="Tore">                    
                                </div>     
                                <div class="col-xs-12 col-md-1"></div>
                                <div class="col-xs-12 col-md-4">
                                    <p>{{ game.guestteam.name|e }} <p>
                                </div>                            
                                
                            <input type="hidden" name="gameId{{ game.id|e }}" id="inputQuestionId" value="{{ game.id|e }}">
                        </div>
                        <hr>
                    {% endfor %}  
                    <div class="f1-buttons">
                        <button type="button" class="btn btn-previous">Zurück</button>
                        <button type="button" class="btn btn-next">Weiter</button>
