{% extends 'base.html.twig' %}

{% block custom_javascript %}
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>

{% endblock %}            

{% block body %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box">
            <div class="f1">
                <h4>Hier findest du alle Fragen</h4>
                <p style="font-size:10px;">Mit Klick auf die Frage kannst du die Anwort festlegen</p>
            </div>
        </div>
    </div>     

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box" >        
            <div class="f1">
                {% for question in questions %}
                    <div class="row">
                        <div class="col-xs-12 col-md-12">                    
                            <p><a href="{{ path('adminQuestion', { 'questionId': question.id })}}">  {{ question.question }} </a></p>
                            {% if(question.correctAnswer is null) %}    
                                <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                            {% elseif(question.correctAnswer is not null) %}    
                                <i class="fa fa-check" aria-hidden="true"></i>
                            {% endif %}                              
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>            

{% endblock %}


