{% extends 'base.html.twig' %}

{% block custom_javascript %}
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>

{% endblock %}            

{% block body %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box">
            <div class="f1">
                <h4>Hier findest du alle Spiele</h4>
                <p style="font-size:10px;">Mit Klick auf das Spiel kannst du das Ergebnis eingeben</p>
            </div>
        </div>
    </div>     

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box" >        
            <div class="f1">
                {% for game in games %}
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <p><a href="{{ path('adminGame', { 'gameId': game.id })}}">  {{ game.hometeam.name }} : {{ game.guestteam.name }} </a></p>
                            {% if((game.homeTeamScore is null) or (game.guestTeamScore is null)) %}    
                                <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                            {% elseif((game.homeTeamScore is not null) and (game.guestTeamScore is not null)) %}    
                                <i class="fa fa-check" aria-hidden="true"></i>
                            {% endif %}
                        </div>
                    </div>    
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>            

{% endblock %}


